{
    "name": "bun-mock-prisma",
    "version": "1.2.1",
    "description": "A simple and type-safe mocking utility for Prisma Client in Bun tests",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "bun build ./index.ts --outdir ./dist --target bun",
        "test": "echo 'Running tests in ./demo...' && cd demo && bun run test && cd ..",
        "typecheck": "bun tsc --noEmit",
        "prepublishOnly": "bun run build"
    },
    "keywords": [
        "bun",
        "prisma",
        "mock",
        "test",
        "typescript"
    ],
    "author": "Torben KÃ¶hler",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tkoehlerlg/bun-mock-prisma.git"
    },
    "bugs": {
        "url": "https://github.com/tkoehlerlg/bun-mock-prisma/issues"
    },
    "homepage": "https://github.com/tkoehlerlg/bun-mock-prisma#readme",
    "engines": {
        "bun": ">=1.0.0"
    },
    "peerDependencies": {
        "bun-types": ">=1.0.0"
    },
    "devDependencies": {
        "bun-types": "latest",
        "prettier": "^3.5.3",
        "typescript": "^5.8"
    },
    "trustedDependencies": [
        "bun"
    ]
}
